@{
    ViewData["Title"] = "Book detail " + Model.book.Title;
}
@* @model BookModel *@


<div class="container">
  <h1>Book details | @Model.Name</h1>
    <div class="row">
        <div class="col-md-6">
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    @for (int i = 0; i < Model.book.Gallery.Count; i++)
                    {
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i" class="@(i==0 ? "active" : "")" aria-current="true" aria-label="Slide @(i+1)"></button>
                    }
                </div>
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.book.Gallery.Count; i++)
                    {
                        <div class="carousel-item @(i==0 ? " active" : "") ">
                            <img src="@Model.book.Gallery[i].URL" class="d-block w-100" alt="...">
                        </div>
                    }
                    
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h1>@Model.book.Title</h1>
                </div>
            </div>
    
            <div class="row">
                <div class="col-md-12 text-primary">
                    <span class="label label-primary">By: </span>
                    <span class="monospaced">@Model.book.Author</span>
                </div>
            </div>
    
            <div class="row">
                <div class="col-md-12">
                    <p class="description">
                        @Model.book.Description
                    </p>
                </div>
            </div>
    
            <div class="row">
                <div class="col-md-4">
                    <a class="btn btn-outline-primary" data-toggle="modal" data-target="#exampleModal">
                        Read now
                    </a>
                </div>
            </div>
    
            <hr />
    
            <ul class="list-group">
                <li class="list-group-item"><span class="font-weight-bold">Category - </span> @Model.book.Category</li>
                <li class="list-group-item"><span class="font-weight-bold">Total pages - </span> @Model.book.TotalPages</li>
                <li class="list-group-item"><span class="font-weight-bold">Language - </span> @Model.book.Language</li>
            </ul>
        </div>
    </div>
    <div class="py-5 bg-light" id="similarBooks">
                <h3 class="h3">Similar books</h3>
        <div class="row">
            @for (int i = 0; i < 5; i++)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
                        <div class="card-body">
                            <h3 class="card-title">book.Title</h3>
                            <p class="card-text">book.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="#" class="btn btn-sm btn-outline-secondary">View details</a>
                                </div>
                                <small class="text-muted">book.Author</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
    
        </div>
        </div>
</div>