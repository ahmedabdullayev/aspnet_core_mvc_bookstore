@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signInManager

@if (_signInManager.IsSignedIn(User))
{

    <!-- Example split danger button -->
    <div class="btn-group">
        <a class="nav-link dropdown-toggle text-dark" href="#" data-bs-toggle="dropdown" aria-expanded="false">
            @* Hello @User.Identity?.Name *@
            Hello @(User.FindFirst("UserFirstName").Value + " " + User.FindFirst("UserLastName").Value)
        </a>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" asp-action="Signout" asp-controller="Account">Logout</a></li>
            <li><a class="dropdown-item" asp-action="ChangePassword" asp-controller="Account">Change password</a></li>
        </ul>
    </div>
}
else
{
    <li class="nav-item">
        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary" asp-route-ReturnUrl="@Context.Request.Path">Login</a>
        <a asp-controller="Account" asp-action="Signup" class="btn btn-primary">Register</a>
    </li>
}


