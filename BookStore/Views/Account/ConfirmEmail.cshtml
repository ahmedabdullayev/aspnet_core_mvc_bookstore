
@{
    ViewData["Title"] = "Confirm email";
    Layout = "_Layout";
}
<div class="container">
    <div class="row text-center">
        <div class="col-md-4">
        </div>
        <div class="col-md-4">
            @if (ViewBag.IsSuccess == true)
            {
                <p>Your email has been verified!</p>
            }
            else
            {
                <p>Something went wrong! Or your token is expired</p>
            }
        </div>
    </div>
</div>